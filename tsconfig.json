{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                                  
    "lib": ["ES2023"],                                   

    /* Modules */
    "module": "Node16",                                 
    "rootDir": "./",                                    
    "outDir": "./dist",                                  

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": [
    "src/**/*",
    "src/config/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
